<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/demo"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:text="Demo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <!--<TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="You have 3 hours for this exam"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:visibility="visible"
                />-->

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_weight="2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>



            <ImageView
                android:id="@+id/account"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:visibility="invisible"/>


            <TextView
                android:id="@+id/candidateName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"

                />


            <TextView
                android:id="@+id/exam_no"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/candidateName"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/paper1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/exam_no"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:text=""
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/paper2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"
                />


            <TextView
                android:id="@+id/paper3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper2"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/paper4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/change_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paper4"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="59dp"
                android:layout_centerHorizontal="true"
                android:text="Change subject combination"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                android:visibility="invisible"/>



            <TextView
                android:id="@+id/selectSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="Select a new Subject combination"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:visibility="invisible"/>


            <CheckBox
                android:id="@+id/English"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/selectSubject"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="30dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="English Language"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Maths"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/selectSubject"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="30dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Mathematics"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>


            <CheckBox
                android:id="@+id/Physics"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/English"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Physics"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Chemistry"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Maths"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Chemistry"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>

            <CheckBox
                android:id="@+id/Biology"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Physics"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Biology"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>


            <CheckBox
                android:id="@+id/Commerce"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Chemistry"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Commerce"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:visibility="invisible"/>


            <CheckBox
                android:id="@+id/Accounting"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Biology"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Accounting"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Government"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Commerce"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Government"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>




            <CheckBox
                android:id="@+id/Economics"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Accounting"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Economics"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Literature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Government"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Literature in English"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Geography"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Economics"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Geography"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Agric"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Literature"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="Agricultural Sc."
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/History"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Geography"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="History"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <CheckBox
                android:id="@+id/Crk"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/Agric"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="C.R.K"
                android:textSize="11sp"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="invisible"/>



            <Button
                android:id="@+id/finished"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_below="@id/Crk"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="Finished"
                android:textColor="@android:color/white"
                android:visibility="invisible"/>


            <Button
                android:id="@+id/take_exam"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_below="@id/change_subject"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="take exam"
                android:textColor="@android:color/white"
                android:visibility="invisible"/>



        </RelativeLayout>

    </ScrollView>




</RelativeLayout>