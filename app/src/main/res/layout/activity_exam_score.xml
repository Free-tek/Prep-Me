<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >


            <TextView
                android:id="@+id/demo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="30dp"
                android:text="Demo" />


            <ImageView
                android:id="@+id/account"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <TextView
                android:id="@+id/candidateName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:text="Adewole Babatunde"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/exam_no"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/candidateName"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="GH64892"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />



            <TextView
                android:id="@+id/paper1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/exam_no"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:text="English Language"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/paper1score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/exam_no"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/paper1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/paper1"
                android:textSize="18sp"
                android:text="40"
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/paper2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Mathematics"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/paper2score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/paper1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/paper1"
                android:text="50"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/paper3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper2"
                android:layout_centerHorizontal="true"
                android:text="Physics"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/paper3score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper2"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/paper1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/paper1"
                android:text="60"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/paper4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Literature in English"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/paper4score"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/paper1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/paper4"
                android:text="80"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper4"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="TOTAL"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/total"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper4"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/paper1"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/paper4"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />


            <Button
                android:id="@+id/subscribe"
                android:visibility="visible"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/total"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="Subscribe Now"
                android:textColor="@android:color/white"

                />

            <Button
                android:id="@+id/saveImage"
                android:visibility="visible"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/subscribe"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="Save Report"
                android:textColor="@android:color/white"
                android:layout_marginBottom="40dp"
                />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>