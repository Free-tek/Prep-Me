<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <!--<TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="You have 3 hours for this exam"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:visibility="visible"
                />-->

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_weight="2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/demo"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="30dp"
                android:text="Demo" />

            <ImageView
                android:id="@+id/account"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/candidateName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"

                />


            <TextView
                android:id="@+id/exam_no"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/candidateName"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/paper1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/exam_no"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:text=""
                android:layout_marginTop="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/paper2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"
                />


            <TextView
                android:id="@+id/paper3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper2"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/paper4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/paper3"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/change_subject"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paper4"
                android:layout_marginLeft="100dp"
                android:background="@drawable/transparent_text"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="Change subject combination"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:visibility="invisible"/>


            <Button
                android:id="@+id/take_demo_exam"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/change_subject"
                android:layout_marginLeft="100dp"
                android:background="@drawable/transparent_text"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="Take Demo Exam"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/instruction"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/take_demo_exam"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/transparent_text"
                android:text="@string/instruction"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/take_exam"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/instruction"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="take test"
                android:textColor="@android:color/white"
                android:visibility="visible"/>







        </RelativeLayout>

    </ScrollView>




</RelativeLayout>